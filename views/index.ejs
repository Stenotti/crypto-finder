<style>
body {
  padding-top: 50px;
}

.CryptoDatatable{
  width: 100%;
}
table.dataTable td {
  padding: 5px;
}


</style>
<div class="text-muted">
    <div class="CryptoDatatable">
        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>M Cap</th>
                    <th>ATH</th>
                    <th>To ATH</th>
                    <th>To ATH %</th>
                    <th>24h %</th>
                    <th>7d %</th>
                    <th>Exchange</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
    jQuery.fn.dataTableExt.oSort['string-case-asc']  = function(x,y) {
	return ((x < y) ? -1 : ((x > y) ?  1 : 0));
};

jQuery.fn.dataTableExt.oSort['string-case-desc'] = function(x,y) {
	return ((x < y) ?  1 : ((x > y) ? -1 : 0));
};
    function renderTable(){
        $('#example').DataTable( {
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'pdf',
                    exportOptions: {
                    columns: [ 0, 1, 2, 4, 5, 8 ]
                    },
                },
            ],
            paging:   false,
            info:   false,
            order: [[ 3, "desc" ]],
            ajax: {
                url: '/unlisted-coins',
                dataSrc: function(json){
                    return json
                }
            },
            columns: [       
                { data: 'image' },
                { data: 'name' },
                { data: 'current_price' },
                { data: 'market_cap_rank' },
                { data: 'ath' },
                { data: 'toATH' },
                { data: 'toATHPercentage' },
                { data: 'price_change_percentage_24h' },
                { data: 'price_change_percentage_7d_in_currency' },
                { data: 'exchange' },
                { data: 'action' },
                ],
            columnDefs : [
            {
                targets : 0 ,
                data: "img",
                render : function ( image, type, full) {
                    return '<img width="20" src="'+image+'"/>';
                }
            },
            {
                targets : 1 ,
                data: "img",
                render : function ( text, type, full) {
                    return '<a target="_blank" href="https://coinmarketcap.com/currencies/'+full.id+'"/>'+text+'</a>';
                }
            },
            {
                targets : 6 ,
                data: "img",
                render : function ( text, type, full) {
                    return `${text}%`
                }
            },
            {
                targets : 7 ,
                data: "img",
                render : function ( text, type, full) {
                    return `${text}%`
                }
            },
            ]
        } );
    }
    $(document).ready(function () {
        renderTable()
    })

</script>
